{% extends 'LSMainBundle::layout.html.twig' %}

{% block title %}Signup{% endblock%}

{% block body %}
    <header>
        <h1>Signup form</h1>
    </header>
  
 
    {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="signup-notice">
        {{ flashMessage }}
    </div>
    {% endfor %}
       
 

    <form action="{{ path('LSMainBundle_signup') }}" method="post" {{ form_enctype(form) }} class="signup">
        {{ form_errors(form) }}

        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}  

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}